  <body>
  <%- include("../includes/navigation.ejs") %>

    <main>
      <form class="product-form"
      action="/admin/<%= isEdit ? 'edit-product': 'add-product' %>"
      method="POST">
        <div class="form-control">
          <label for="title">Product Title</label>
          <input type="text" name="title" id="title"
          value="<%= isEdit ? product.title : '' %>"
          />
        </div>
         <div class="form-control">
          <label for="Product Description">Product Description</label>
          <textarea name="description" id="description" rows="6"><%= isEdit ? product.description : '' %></textarea>
        </div>
        <div class="form-control">
          <label for="Product Price">Product Price</label>
          <input type="number" name="price" id="price"
            value="<%= isEdit ? product.price : '' %>"
             />
        </div>
         <div class="form-control">
          <label for="Product image url">Product Image Url</label>
          <input type="text" name="imageUrl" id="imageUrl"
            value="<%= isEdit ? product.imageUrl : '' %>"
            />
        </div>
        <% if(isEdit) { %>
            <input type="hidden" value="<%= product.productId %>" name="productId" />
          <% } %>
        <button type="submit">
            <%= isEdit ? 'Save Changes' : 'Add Product' %>
        </button>
      </form>
    </main>
<%- include("../includes/bottom.ejs") %>