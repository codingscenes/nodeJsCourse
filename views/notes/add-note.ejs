<main>
  <div class="container">
    <div class="add-notes">
      <form
        action="<%= isEditMode ? '/edit-note' : '/add-note'  %>"
        method="POST"
      >
        <div class="form-group">
          <label for="Title"> Title</label>
          <input
            type="text"
            class="form-control"
            name="title"
            value="<%= isEditMode ? note.title : ''   %>"
          />
        </div>
        <div class="form-group">
          <label for="Description"> Description</label>
          <textarea rows="5" class="form-control" name="description">
<%= isEditMode ? note.description : ''   %></textarea
          >
        </div>
        <div class="form-group">
          <label for="Image Url"> Image Url</label>
          <input
            type="text"
            class="form-control"
            name="imageUrl"
            value="<%= isEditMode ? note.imageUrl : ''   %>"
          />
        </div>
        <% if (tags && tags.length) { %>
        <div class="form-group">
          <label for="tags">Tags:</label>
          <select class="form-control" id="tags" name="tagIds" multiple>
            <% tags.forEach(function(tag) { %>
            <option value="<%= tag.id %>"
              <% if (selectedTags.includes(tag.id)) { %>selected<% } %>
              ><%= tag.name %></option>
            <% }); %>
          </select>
        </div>
        <% } %>
        <% if (isEditMode) { %>
        <input type="hidden" name="noteId" value="<%= note.id %>" />
        <% } %>
        <button class="btn" type="submit">
          <%= isEditMode ? 'Save changes' : 'Add' %>
        </button>
        <a href="/" class="btn" role="button">Cancel</a>
      </form>
    </div>
  </div>
</main>
<%- include('../includes/bottom.ejs') %>
